<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="header" type="com.concretesolutions.desafioandroid.viewmodel.HeaderViewModel" />
    </data>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent" android:orientation="vertical">
        <TextView
                android:text="@{header.title}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/title"/>

        <TextView
                android:text="@{header.description}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/description"/>


    </LinearLayout>
</layout>