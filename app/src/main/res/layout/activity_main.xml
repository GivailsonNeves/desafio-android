<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.MainActivity">
    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/dataContent"
            android:padding="@dimen/spacer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/progressBar"
                android:visibility="gone"
                android:id="@+id/rvRepositories"/>
        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/smallProgressSize"
                android:layout_height="@dimen/smallProgressSize"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />
        <ProgressBar
                android:id="@+id/mainProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/loaderSize"
                android:layout_height="@dimen/loaderSize"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/feedTryAgain"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginBottom="@dimen/spacer"
                android:textAlignment="center"
                android:text="@string/dados_n_o_encontrados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <Button
                android:id="@+id/btnReload"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/tentar_novamente"
                />
    </LinearLayout>
</LinearLayout>


